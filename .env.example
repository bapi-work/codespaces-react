# Environment Configuration Template
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# ============================================================================
# ENVIRONMENT & MODE
# ============================================================================
NODE_ENV=production
PORT=5000
AUTO_INIT_DB=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MongoDB Connection String
# Local: mongodb://localhost:27017/asset-management
# Docker: mongodb://admin:password@mongodb:27017/asset-management?authSource=admin
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/asset-management?retryWrites=true
# AWS DocumentDB: mongodb+srv://username:password@docdb-endpoint.us-east-1.docdb.amazonaws.com:27017/asset-management?ssl=true
# Azure CosmosDB: mongodb+srv://username:password@cosmosdb-name.mongo.cosmos.azure.com/?ssl=true&retryWrites=false
# DigitalOcean: mongodb+srv://username:password@database-endpoint:port/asset-management?retryWrites=true

MONGODB_URI=mongodb://localhost:27017/asset-management

# Docker MongoDB credentials (if using Docker)
MONGO_USER=admin
MONGO_PASSWORD=password

# ============================================================================
# ADMIN USER - INITIAL SETUP
# ============================================================================
# These credentials are used when AUTO_INIT_DB=true
# Change these immediately after first login!

ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123456
ADMIN_EMAIL=admin@yourcompany.com

# ============================================================================
# COMPANY INFORMATION
# ============================================================================
COMPANY_NAME=Your Company Name
COMPANY_LOGO=https://example.com/logo.png
HEADER_TEXT=Asset Management System

# ============================================================================
# LOCALIZATION & FORMATTING
# ============================================================================
CURRENCY=USD
TIMEZONE=America/New_York
DATE_FORMAT=MM/DD/YYYY
LANGUAGE=en

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# JWT Secret - MUST BE 32+ CHARACTERS!
# Generate with: openssl rand -base64 32
# CHANGE THIS IN PRODUCTION!

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars

# JWT Configuration
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=10

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true

# ============================================================================
# API CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000
API_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
AUDIT_LOGGING_ENABLED=true
ERROR_REPORTING_ENABLED=true

# ============================================================================
# CLOUD PROVIDER SPECIFIC
# ============================================================================

# ---- AWS CONFIGURATION ----
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS S3 for file storage
S3_BUCKET_NAME=asset-management-bucket
S3_REGION=us-east-1

# AWS DocumentDB
DOCDB_ENDPOINT=docdb-cluster.us-east-1.docdb.amazonaws.com
DOCDB_PORT=27017

# ---- AZURE CONFIGURATION ----
AZURE_LOCATION=East US
AZURE_RESOURCE_GROUP=asset-management-rg
AZURE_COSMOSDB_ACCOUNT=asset-management-cosmos
AZURE_COSMOSDB_KEY=your-cosmosdb-key

# Azure Storage
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your-storage-key

# ---- DIGITALOCEAN CONFIGURATION ----
DIGITALOCEAN_TOKEN=dop_v1_your_token_here
DIGITALOCEAN_REGION=nyc3

# DigitalOcean Spaces
SPACES_KEY=your-spaces-key
SPACES_SECRET=your-spaces-secret
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_BUCKET=asset-management-bucket

# ---- MONGODB ATLAS ----
MONGODB_ATLAS_USER=your-username
MONGODB_ATLAS_PASSWORD=your-password
MONGODB_ATLAS_CLUSTER=your-cluster

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-key

# QR Code Generation
QRCODE_ENABLED=true

# CSV Import/Export
CSV_IMPORT_ENABLED=true
CSV_EXPORT_ENABLED=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Asset Management
ASSET_DEPRECATION_ENABLED=true
ASSET_QR_CODE_ENABLED=true

# Reporting
REPORTS_ENABLED=true
EXPORT_TO_PDF_ENABLED=true

# Notifications
EMAIL_NOTIFICATIONS_ENABLED=true
MOBILE_NOTIFICATIONS_ENABLED=false

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================

# Rate limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session timeout (minutes)
SESSION_TIMEOUT=30

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# ============================================================================
# DEBUGGING & DEVELOPMENT (Remove in Production)
# ============================================================================

# Development mode features
DEBUG=false
SHOW_SQL_LOGS=false
SHOW_API_LOGS=true

# API Documentation
SWAGGER_ENABLED=false
SWAGGER_PATH=/api-docs

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Never commit this file to version control
# 2. Add .env to .gitignore
# 3. For cloud deployments, use platform-specific secret managers:
#    - AWS: AWS Secrets Manager
#    - Azure: Azure Key Vault
#    - DigitalOcean: Environment variables
# 4. Always use HTTPS in production
# 5. Change all default values before going live
# 6. Keep sensitive keys secure and rotated
# 7. Enable audit logging in production
# 8. Set up monitoring and alerts
# 9. Regular backups are essential
# 10. Review security settings regularly
#
